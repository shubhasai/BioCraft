<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CardFragment">
    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:id="@+id/cardview"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profileQr"
                android:layout_width="250dp"
                android:layout_margin="20dp"
                android:layout_height="250dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/userName"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/amiko"
                android:text="Shubhasai Mohapatra"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:id="@+id/email"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/amiko"
                android:text="mshubhasai2002@gmail.com"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:id="@+id/phone"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/amiko"
                android:text="9937596875"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:id="@+id/address"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/amiko"
                android:text="Basudevpur,Bhadrak,Odisha,756125"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="This has been generated with Bio Craft - By Shubhasai" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:elevation="10dp"
        android:layout_width="50dp"
        android:id="@+id/btn_share"
        android:src="@drawable/ic_share"
        android:padding="10dp"
        android:layout_height="50dp"/>
</LinearLayout>