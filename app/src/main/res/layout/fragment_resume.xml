<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ResumeFragment">
    <TextView
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="?attr/colorPrimary"
        android:text="Select From Below Templates"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_creativeninja"
            android:layout_width="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_creativeninja"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/btn_devgenius"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_devgenius"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_digitalpro"
            android:layout_width="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_digitalpro"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/btn_marketmaster"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_marketmaster"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>