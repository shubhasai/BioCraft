<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Contact Details"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:hint="Name"
            app:startIconDrawable="@drawable/ic_person"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:startIconTint="?attr/colorPrimary"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:id="@+id/etname"
                android:inputType="textPersonName"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Address"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="State"
                    app:startIconDrawable="@drawable/ic_address"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etState"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="District"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_address"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etDistrict"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="Locality"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_address"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etLocality"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="Pincode"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_address"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etPincode"
                        android:inputType="textPostalAddress"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
        </TableLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:hint="Email"
            app:startIconDrawable="@drawable/baseline_email_24"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:startIconTint="?attr/colorPrimary"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:id="@+id/etemail"
                android:inputType="textEmailAddress"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:hint="Phone Number"
            app:startIconDrawable="@drawable/ic_phone"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:startIconTint="?attr/colorPrimary"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:id="@+id/etphone"
                android:inputType="phone"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Social and Work Profiles:"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <TableLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Linkedin"
                    app:startIconDrawable="@drawable/ic_linkedin"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etlinkedin"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:hint="Github"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/github"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etGithub"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Leetcode"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_leetcode"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etLeetCode"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:hint="Stack Overflow"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_stackoverflow"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etstackoverflow"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Dribble"
                    app:startIconDrawable="@drawable/ic_dribble"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etDribble"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:hint="Facebook"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_facebook"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etFacebbok"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Instagram"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_instagram"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etInstagram"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:hint="Youtube"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_youtube"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etYoutube"
                        android:inputType="textPostalAddress"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Link 1 (Will be at Top of Resume)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_link"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etLink1"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:hint="Link 2 (Will be at Buttom of Resume)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconDrawable="@drawable/ic_link"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etLink2"
                        android:inputType="textUri"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:id="@+id/btn_save"
            android:text="Save Data"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Educations"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addeducation"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvEducation"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Work Experience"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addworkexp"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvWorkexp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Projects"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addprojects"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvProjects"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Language"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addlanguage"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvLanguage"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Skills"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addskills"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvSkills"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Volunteering/Extracurricular Activity"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addextracurricular"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvextraActivity"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="Acheivements"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="44dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/btn_addachievements"
            android:src="@drawable/ic_add"
            android:layout_height="44dp"
            android:layout_marginRight="10dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvAcheivements"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>